<section>
  <h1 class="tbl-h1">Highscores</h1>
  <label for="sort-highscores">Sort by:</label>
  <select name="sort" id="sort-highscores" onChange="window.location.href = '/highscores?sort=' + this.value">
    <option value="Select">Select</option>
    <option value="name">Name</option>
    <option value="duration">Duration</option>
    <option value="attempts">Attempts</option>
    <option value="unique">Unique Letters</option>
  </select>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>Name</th>
          <th>Duration</th>
          <th>Attempts</th>
          <th>Unique Letters</th>
          <th>Start Time</th>
          <th>End Time</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        {{#each highscores}}
        <tr>
          <td>{{this.name}}</td>
          <td>{{this.duration}} seconds</td>
          <td>{{this.attempts}} attempts</td>
          <td>{{#if this.uniqueLetters}}Yes{{else}}No{{/if}}</td>
          <td>{{this.startTime}}</td>
          <td>{{this.endTime}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>